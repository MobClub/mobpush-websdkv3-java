    <modelVersion>4.0.0</modelVersion>
    <groupId>com.mob.sdk.push</groupId>
    <artifactId>mobpush-websdkv3-java</artifactId>
    <version>2.0.1</version>
    <name>mobpush-websdkv3-java</name>
    <url>https://github.com/MOBX/mobpush-websdkv3-java</url>
    <description>MobPush API for Java</description>

